@model List<FoodGetVM>



<div class="container">
    <div class="row">
        <h1>Foods</h1>
        <a asp-controller="Food" asp-action="Create" class="btn btn-success">Add new Food</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Category</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@(item.Description is null ? "no description" : item.Description)</td>
                        <td>@item.Price</td>
                        <td><img src="~/images/@item.ImagePath" alt="@item.Name" class="img-thumbnail"/></td>
                        <td>@item.CategoryName</td>
                        <td>
                            <a asp-controller="Food" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">🖊️</a>
                            <a asp-controller="Food" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">🗑️</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>